<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_goal_state_popup"
    android:layout_width="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    android:orientation="vertical">

        <TextView
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:id="@+id/goal_state_title_popup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Goal State"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/grid_layout_goal_state"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/goal_state_title_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/cv_goal_state_popup"
            app:layout_constraintEnd_toEndOf="@id/cv_goal_state_popup"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_margin="25dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            tools:ignore="NotSibling">

        <TextView
            android:id="@+id/popup_goal00"
            android:text="1"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal01"
            android:text="2"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal02"
            android:text="3"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal10"
            android:text="4"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal11"
            android:text="5"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal12"
            android:text="6"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal20"
            android:text="7"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal21"
            android:text="8"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />

        <TextView
            android:id="@+id/popup_goal22"
            android:text="0"
            android:background="#333333"
            android:textColor="#f0f0f0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:gravity="center" />
        </GridLayout>
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#f0f0f0"
        android:backgroundTint="#333333"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_layout_goal_state">

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>