<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/dialog_title"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Enter Initial State"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:id="@+id/cv_table_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_shape"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <!-- Add your layout components here -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <EditText
                    android:id="@+id/init_00"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_01"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_02"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="2"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/init_10"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="3"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_11"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="4"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_12"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="5"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/init_20"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="6"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_21"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="7"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/init_22"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="8"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/cv_table_init"
        android:id="@+id/goal_title"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="8dp"
        android:text="Enter Goal State"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_table_goal"
        app:layout_constraintTop_toBottomOf="@id/goal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/table_border"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <EditText
                    android:id="@+id/goal_00"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_01"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_02"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="2"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/goal_10"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="3"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_11"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="4"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_12"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="5"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>

            <TableRow>

                <EditText
                    android:id="@+id/goal_20"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="6"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_21"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="7"
                    android:inputType="number"
                    android:maxLength="1" />

                <EditText
                    android:id="@+id/goal_22"
                    android:layout_width="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="8"
                    android:inputType="number"
                    android:maxLength="1" />

            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonSolve"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text = "Solve"
        android:backgroundTint="#f0f0f0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_table_goal"
        tools:ignore="ExtraText">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>